{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": ["warn", "never"],
        "quotes": ["error", "single"],
        "indent": ["warn", 4],
        "react/jsx-indent-props": "off",
        "react/jsx-indent": "off",
        "react/jsx-filename-extension": "off"
    }
}